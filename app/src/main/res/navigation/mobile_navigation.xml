<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_statistics">

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.mindyapps.android.quizmoxymvp.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_select_quiz"
        android:name="com.mindyapps.android.quizmoxymvp.ui.select_quiz.SelectQuizFragment"
        android:label="@string/title_select_quiz"
        tools:layout="@layout/fragment_select_quiz" >
        <action
            android:id="@+id/action_navigation_select_quiz_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.mindyapps.android.quizmoxymvp.ui.quiz.QuizFragment"
        android:label="@string/title_select_quiz"
        tools:layout="@layout/fragment_quiz">
        <argument
            android:name="categoryId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="difficulty"
            app:argType="string"
            android:defaultValue="easy" />
    </fragment>

</navigation>